<main>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
    <h2>User info</h2>
    <table class="table">
     <tr></tr>
     <tr>
      <th>name</th>
      <th></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th></th>
     </tr>
    </table>
     <div class="row">
      <%= link_to edit_user_path, class: "btn btn-outline-secondary btn-block" do %>
       <i class="fas fa-user-cog"></i>
      <% end %>
     </div>
     <h2 class="mt-3">New Book</h2>
     <%= form_with model: @book do |f| %>
     <h4>Title</h4>
     <%= f.text_field :title %>
     <h4>Opinion</h4>
     <%= f.text_area :body %>
     <%= link_to 'Create Book', books_path, class: "btn btn_green"%>
     <% end %>
   </div>
   <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
    <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
     <% @books.each do |book|%>
     <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
     </tr>
     <% end %>
    </tbody>
    </table>
   </div>
 </div>
 </div>
</main>